<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomToolBar" parent="Theme.MaterialComponents">
        <item name="android:background">@color/colorPrimary</item>
        <item name="overlapAnchor">false</item>
        <item name="actionOverflowButtonStyle">@style/MyOverFlowMenu</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverFlowMenu</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>
    <style name="MyOverFlowMenu" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/add_circle</item>
    </style>
    <style name="CustomToolBarBelow" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="CustomLightTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/store_page_activity_background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="colorControlNormal">@color/lightGrey</item>
    </style>

</resources>
