<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/LightTheme">

    <!-- <TextView
         android:id="@+id/add_store_title"
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_marginBottom="4dp"
         android:layout_marginTop="4dp"
         android:text="@string/add_store_title"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textStyle="bold"
         android:textColor="#000000"
     />-->

    <!-- Location Name -->

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/store_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/store_name_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="GET VALUES FROM USER, DELETE THIS IN XML" />

    <!-- Location Address -->

    <TextView
        android:id="@+id/add_store_address"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/store_location"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/store_address_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="GET VALUES FROM USER, DELETE THIS IN XML"/>

    <!-- Location Type -->

    <TextView
        android:id="@+id/store_type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/store_type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/store_type_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="GET VALUES FROM USER, DELETE THIS IN XML"/>



    <TextView
        android:id="@+id/review_overall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/overall_rating"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/overallRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:isIndicator="true"
        android:layout_marginStart="0dp"
        android:theme="@style/RatingBar" />


    <TextView
        android:id="@+id/review_freshness"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/freshness"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/freshnessRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:isIndicator="true"
        android:layout_marginStart="0dp"
        android:theme="@style/RatingBar" />


    <TextView
        android:id="@+id/review_Taste"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/taste"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/tasteRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:isIndicator="true"
        android:layout_marginStart="0dp"
        android:theme="@style/RatingBar" />


    <TextView
        android:id="@+id/review_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="@string/price"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/priceRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:isIndicator="true"
        android:layout_marginStart="0dp"
        android:theme="@style/RatingBar" />

</LinearLayout>
