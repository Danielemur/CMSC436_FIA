    <!-- Location Name -->

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="Store Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/store_name_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="get store name" />

    <!-- Location Address -->

    <TextView
        android:id="@+id/store_address"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="Store Location"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/store_address_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="get store address"/>

    <!-- Location Type -->

    <TextView
        android:id="@+id/store_type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="Store Type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/store_type_entry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="get store type"/>



    <TextView
        android:id="@+id/review_overall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:text="Overall"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/store_overall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:isIndicator="true"
        android:layout_marginStart="0dp"
        android:theme="@style/RatingBar" />


